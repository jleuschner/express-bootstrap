.container-fluid.JL
  .row
    .col-sm-4
      #DokuSys_TopicTree
    .col-sm-8
      #DokuSys_TopicDlg
        nav.breadcrumbs.small
          ul
            li(data-toggle="tooltip",data-placement="bottom",title='Wurzel (Kurzanleitung)'): a(href='#',data-id='0'): i.fa.fa-home
            li(data-toggle="tooltip",data-placement="bottom",title='Neuer Artikel'): a(href='#',data-id='-1'): i.fa.fa-plus-square
        div.topicRoot
          h1 Doku-Management
          h3 Artikel anlegen
          blockquote.small
            p Neue Artikel werden unterhalb des aktuellen Artikels mit Click auf das 
              span.fa.fa-plus-square.text-primary
              | -Symbol am Ende der Pfadanzeige erzeugt.

        form.topicWorkspace
          .row
            .col-xs-10
              h1.topicShow(name='topic') Topic
            .col-xs-2
              button#btnEdit.btn.btn-primary.topicShow.pull-right(type='button') Edit

          .form-group.topicEdit.hidden
            label Topic
            input.form-control(name='topic',type='text',required='required',placeholder='Topic',data-bv-message='Topic angeben')
          .form-group.topicEdit.hidden
            label Tags
            input.form-control(name='keywordsxx',type='text',required='required',placeholder='Schlagworte')
          div.topicShow(name='topictext', style='background-color:#fbfbfb;')
          .form-group.topicEdit.hidden
            label Beschreibung
            div.form-group.summernote.topicEditor(name='topictext')
          .form-group
            .col-xs-3.col-xs-offset-1
              button#btnEdit.btn.btn-primary.btn-block.topicShow(type='button') Edit
              button#btnCancel.btn.btn-danger.btn-block.topicEdit.hidden(type='button') Abbrechen
            .col-xs-2.col-xs-offset-4
              button.btn.btn-primary.btn-block(type='submit') OK
